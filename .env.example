# =============================================================================
# Knowledge Distillation Thesis Experiments - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# Hugging Face Configuration
# -----------------------------------------------------------------------------
# Your Hugging Face token for accessing gated models
HF_TOKEN=your_huggingface_token_here

# Cache directory for HF models and datasets
HF_HOME=./hf_cache

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
# Primary teacher model (7B-8B target for full experiments)
TEACHER_MODEL_PRIMARY=meta-llama/Llama-3.2-8B-Instruct

# Fallback teacher for local MPS runs (3B-4B, more memory-friendly)
TEACHER_MODEL_FALLBACK=Qwen/Qwen2.5-3B-Instruct

# Student S1: ~1.1B model
STUDENT_S1=TinyLlama/TinyLlama-1.1B-Chat-v1.0

# Student S2: ~350M model or use "quantized-proxy" for S1 quantized
# Options: "microsoft/phi-1_5", "quantized-proxy", or other small model
STUDENT_S2=quantized-proxy

# -----------------------------------------------------------------------------
# Runtime Configuration
# -----------------------------------------------------------------------------
# Device preference: mps, cuda, or cpu
DEVICE=mps

# Fast mode: true for quick local runs, false for full experiments
FAST_MODE=true

# Random seeds (comma-separated)
SEEDS=42,123,456

# Precision: fp32 (recommended for MPS stability) or fp16
PRECISION=fp32

# -----------------------------------------------------------------------------
# Paths Configuration
# -----------------------------------------------------------------------------
# Results output directory
RESULTS_DIR=./results

# Models checkpoint directory
MODELS_DIR=./results/models

# Raw experiment runs
RAW_RUNS_DIR=./results/raw_runs

# Summary tables and figures
SUMMARY_DIR=./results/summary

# Figures output directory
FIGURES_DIR=./results/figures
